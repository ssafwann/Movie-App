<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#88304E"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <TextView
            android:id="@+id/order_date"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="12dp"
            android:text="31 December , 2021"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_num"
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:layout_below="@id/order_date"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="12dp"
            android:text="Order Num:"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_num_data"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/order_date"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/order_num"
            android:text="3"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@id/order_num"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:text="Total Price: $"
            android:textColor="#F90716"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/order_num"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/total_price"
            android:text="265.00"
            android:textColor="#F90716"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_completed"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="149dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/order_num"
            android:text="Completed"
            android:textColor="#90ee90"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

