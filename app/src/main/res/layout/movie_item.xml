<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#88304E"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/nametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:text="This is Movie Name"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shortDesctext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nametext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:text="This is Short Desc"
            android:textColor="#fff"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/releasetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shortDesctext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:paddingTop="2dp"
            android:text="This is Movie Release"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="italic" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
